  <!--========== Interact ============-->

  <SoundDef>
    <defName>Comm_Interact_Weapon</defName>  
    <context>MapOnly</context>  
    <maxSimultaneous>1</maxSimultaneous>  
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>UI/WeaponHandling/SwitchFireMode</clipPath>
          </li>
        </grains>
        <volumeRange>60~60</volumeRange>

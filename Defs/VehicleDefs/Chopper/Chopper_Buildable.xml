<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <Vehicles.VehicleBuildDef ParentName="VehicleBaseBuildable">
    <defName>VT88SkyRanger_Blueprint</defName>
    <label>VT88 Sky Ranger</label>
    <description>A light aerial troop transport designed to move squads quickly across terrain. Lacks heavy armor but compensates with speed and agility.</description>

    <graphicData>
      <texPath>Things/Vehicles/Chopper/Chopper</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(10,10)</drawSize>
    </graphicData>

    <researchPrerequisites>
      <li>VVE_AerialVehicles</li>
    </researchPrerequisites>

    <size>(4,8)</size>

    <statBases>
      <WorkToBuild>40000</WorkToBuild>
      <MaxHitPoints>400</MaxHitPoints>
      <Flammability>0.6</Flammability>
    </statBases>

    <costList>
      <VVE_EngineBlock>4</VVE_EngineBlock>
      <VVE_CarAlternator>6</VVE_CarAlternator>
      <VVE_CarSuspension>5</VVE_CarSuspension>
      <VVE_CarWheel>4</VVE_CarWheel>
      <Steel>700</Steel>
      <ComponentIndustrial>15</ComponentIndustrial>
      <VVE_CarFuelTank>2</VVE_CarFuelTank>
      <VVE_CarTransmission>3</VVE_CarTransmission>
      <VVE_CarWiring>5</VVE_CarWiring>
      <VVE_CarBattery>2</VVE_CarBattery>
    </costList>

    <thingToSpawn>VT88SkyRanger</thingToSpawn>
  </Vehicles.VehicleBuildDef>
</Defs>